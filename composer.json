{
    "name": "cartalyst/sentinel-social",
    "description": "Social network logins for Sentinel using Oauth and Oauth2, including custom services",
    "keywords": [
        "php",
        "cartalyst",
        "laravel",
        "auth",
        "security",
        "oauth"
    ],
    "license": "proprietary",
    "authors": [
        {
            "name": "Cartalyst LLC",
            "email": "help@cartalyst.com",
            "homepage": "https://cartalyst.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/cartalyst/oauth2-facebook"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "cartalyst/sentinel": "^5.0",
        "cartalyst/support": "^5.0",
        "league/oauth1-client": "^1.2",
        "league/oauth2-client": "^2.0"
    },
    "require-dev": {
        "cartalyst/php-cs-fixer-config": "^1.0",
        "illuminate/database": "^8.0",
        "illuminate/events": "^8.0",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.0",
        "league/oauth2-facebook": "dev-feature/php8-support"
    },
    "suggest": {
        "league/oauth2-facebook": "Required for facebook login",
        "league/oauth2-github": "Required for github login",
        "league/oauth2-google": "Required for google login",
        "league/oauth2-linkedin": "Required for linkedin login",
        "league/oauth2-instagram": "Required for instagram login"
    },
    "autoload": {
        "classmap": [
            "src/Exceptions.php"
        ],
        "psr-4": {
            "Cartalyst\\Sentinel\\Addons\\Social\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "component": "addon",
        "branch-alias": {
            "dev-master": "6.0.x-dev"
        },
        "laravel": {
            "providers": [
                "Cartalyst\\Sentinel\\Addons\\Social\\Laravel\\SocialServiceProvider"
            ],
            "aliases": {
                "Social": "Cartalyst\\Sentinel\\Addons\\Social\\Laravel\\Facades\\Social"
            }
        }
    },
    "scripts": {
        "cs:check": "./vendor/bin/php-cs-fixer fix --verbose --ansi --show-progress=estimating --diff --dry-run --config .php_cs.php",
        "cs:fix": "./vendor/bin/php-cs-fixer fix --verbose --ansi --show-progress=estimating --config .php_cs.php",
        "test": "./vendor/bin/phpunit --verbose --colors=always"
    }
}
