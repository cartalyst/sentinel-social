{
	"name": "cartalyst/sentinel-social",
	"description": "Social network logins for Sentinel using Oauth and Oauth2, including custom services",
	"keywords": [
		"php",
		"cartalyst",
		"laravel",
		"auth",
		"security",
		"oauth"
	],
	"license": "proprietary",
    "authors": [
        {
            "name": "Cartalyst LLC",
            "email": "help@cartalyst.com",
            "homepage": "https://cartalyst.com"
        }
    ],
    "repositories": [
        { "type": "composer", "url": "https://packages.cartalyst.com" },
        {"type": "vcs", "url": "https://github.com/cartalyst/sentinel-core"}
    ],
	"require": {
		"php": ">=5.6.4",
		"cartalyst/sentinel-core": "dev-master",
		"cartalyst/sentinel-laravel": "~1.0@dev",
		"cartalyst/support": "~1.0|~2.0",
		"league/oauth1-client": "~1.2",
		"league/oauth2-client": "~1.0|~2.0"
	},
	"require-dev": {
		"cartalyst/sentinel-activations": "~1.0@dev",
		"illuminate/database": "~5.4",
		"illuminate/events": "~5.4",
		"mockery/mockery": "~0.9.4",
		"phpunit/phpunit": "~5.7",
		"league/oauth2-facebook": "~2.0"
	},
	"suggest": {
		"league/oauth2-facebook": "Required for facebook login",
		"league/oauth2-github": "Required for github login",
		"league/oauth2-google": "Required for google login",
		"league/oauth2-linkedin": "Required for linkedin login",
		"league/oauth2-instagram": "Required for instagram login"
	},
	"autoload": {
		"classmap": [
			"src/Exceptions.php"
		],
		"psr-4": {
			"Cartalyst\\Sentinel\\Addons\\Social\\": "src/"
		}
	},
	"extra": {
		"component": "addon",
		"branch-alias": {
			"dev-master": "3.0.x-dev"
		}
	},
	"minimum-stability": "stable"
}
